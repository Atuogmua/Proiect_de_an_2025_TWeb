@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Home";
}
@model Shop.Models.UserData

<div class="container py-4">
     <h2 class="mb-4">Welcome to Our Shop</h2>

     @if (Model.Products != null && Model.Products.Any())
     {
          <div class="row row-cols-1 row-cols-md-3 g-4">
               @foreach (var prod in Model.Products)
               {
                    <div class="col">
                         <div class="card h-100 shadow-sm">
                              <div class="card-body">
                                   <h5 class="card-title">@prod</h5>
                                   <p class="card-text">Explore more about this product.</p>
                              </div>
                              <div class="card-footer bg-white border-0">
                                   @using (Html.BeginForm("Product", "Home", FormMethod.Post, new { autocomplete = "off" }))
                                   {
                                        <button class="btn btn-primary w-100" type="submit" name="btn" value="@prod">View Product</button>
                                   }
                              </div>
                         </div>
                    </div>
               }
          </div>
     }
     else
     {
          <div class="alert alert-info mt-3">No products available at the moment.</div>
     }
</div>

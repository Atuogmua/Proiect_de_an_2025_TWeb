@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Product View";
}

@model Shop.Models.UserData

<h2>@Model.SingleProduct detail page.</h2>
<h2>@Model.SingleProduct.Name</h2>

<div class="row">
     <div class="col-md-6">
          <img src="@Url.Content("/Content/images/" + Model.SingleProduct.ProductImagePath)" alt="@Model.SingleProduct.Name" style="max-width:100%; max-height:400px;" />
     </div>
     <div class="col-md-6">
          <h3>$@Model.SingleProduct.Price</h3>
          <p><strong>Stock:</strong> @Model.SingleProduct.Stock</p>
          <p>@Model.SingleProduct.Description</p>
          <a href="@Url.Action("Catalog", "Product")" class="btn btn-secondary">Back to Catalog</a>
     </div>

     @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
     {
          @Html.HiddenFor(Model => Model.SingleProduct.Id)
          <div class="form-group">
               <label>Quantity:</label>
               <input type="number" name="quantity" value="1" min="1" max="@Model.SingleProduct.Stock" class="form-control" />
          </div>
          <button type="submit" class="btn btn-primary">Add to Cart</button>
     }

</div>

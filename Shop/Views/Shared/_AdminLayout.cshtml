<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title>@ViewBag.Title - My Admin Dashboard</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
     <div class="d-flex" id="wrapper">
          <!-- Sidebar -->
          <div class="border-end bg-white" id="sidebar-wrapper">
               <div class="sidebar-heading border-bottom bg-light">My Admin</div>
               <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action list-group-item-light p-3">Dashboard</a>
                    <a href="@Url.Action("Orders", "Admin")" class="list-group-item list-group-item-action list-group-item-light p-3">Orders</a>
                    <a href="@Url.Action("Products", "Admin")" class="list-group-item list-group-item-action list-group-item-light p-3">Products</a>
                    <a href="@Url.Action("Customers", "Admin")" class="list-group-item list-group-item-action list-group-item-light p-3">Customers</a>
                    <!-- Add more links as needed -->
               </div>
          </div>
          <!-- /#sidebar-wrapper -->
          <!-- Page Content -->
          <div id="page-content-wrapper">
               <!-- Top Navbar -->
               <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                         <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                                 aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                              <span class="navbar-toggler-icon"></span>
                         </button>
                         <div class="collapse navbar-collapse" id="navbarSupportedContent">
                              <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                                   <li class="nav-item active"><a class="nav-link" href="#">Home</a></li>
                                   <li class="nav-item"><a class="nav-link" href="#">Profile</a></li>
                                   <li class="nav-item"><a class="nav-link" href="#">Settings</a></li>
                              </ul>
                         </div>
                    </div>
               </nav>
               <!-- /Top Navbar -->

               <div class="container-fluid">
                    @RenderBody()
               </div>

               @Html.Partial("_SimpleFooter")

          </div>
          <!-- /#page-content-wrapper -->
     </div>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
     <script>
          // Toggle the sidebar
          document.getElementById("sidebarToggle").addEventListener("click", function () {
               document.getElementById("wrapper").classList.toggle("toggled");
          });
     </script>
</body>
</html>

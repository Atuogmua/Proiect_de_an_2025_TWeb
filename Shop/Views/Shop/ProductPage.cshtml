@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Product Page";
}


@model Shop.Models.Product

<h2>@Model.Name</h2>

<div class="row">
     <div class="col-md-6">
          <img src="@Model.ProductImagePath" alt="@Model.Name" style="max-width:100%; max-height:400px;" />
     </div>
     <div class="col-md-6">
          <h3>$@Model.Price</h3>
          <p><strong>Stock:</strong> @Model.Stock</p>
          <p>@Model.Description</p>
          <a href="@Url.Action("Catalog", "Product")" class="btn btn-secondary">Back to Catalog</a>
     </div>

     @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
     {
          @Html.HiddenFor(model => model.Id)
          <div class="form-group">
               <label>Quantity:</label>
               <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control" />
          </div>
          <button type="submit" class="btn btn-primary">Add to Cart</button>
     }

</div>

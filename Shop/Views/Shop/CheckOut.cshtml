@model Shop.Models.Order
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "CheckOut";
}

<!-- Hero Section -->
<div class="hero">
     <div class="container">
          <div class="row justify-content-between">
               <div class="col-lg-5">
                    <div class="intro-excerpt">
                         <h1>Checkout</h1>
                    </div>
               </div>
          </div>
     </div>
</div>

<div class="untree_co-section">
     <div class="container">
          @using (Html.BeginForm("CheckOut", "Shop", FormMethod.Post))
          {
               @Html.AntiForgeryToken()
               <div class="row">
                    <!-- Billing Details -->
                    <div class="col-md-6 mb-5 mb-md-0">
                         <h2 class="h3 mb-3 text-black">Billing Details</h2>
                         <div class="p-3 p-lg-5 border bg-white">
                              <div class="form-group row">
                                   <div class="col-md-6">
                                        @Html.LabelFor(m => m.FirstName, "First Name", htmlAttributes: new { @class = "text-black" })
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                   </div>
                                   <div class="col-md-6">
                                        @Html.LabelFor(m => m.LastName, "Last Name", htmlAttributes: new { @class = "text-black" })
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                   </div>
                              </div>

                              <div class="form-group">
                                   @Html.LabelFor(m => m.Email, "Email Address", htmlAttributes: new { @class = "text-black" })
                                   @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                              </div>

                              <div class="form-group">
                                   @Html.LabelFor(m => m.Address, "Address", htmlAttributes: new { @class = "text-black" })
                                   @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                              </div>

                              <div class="form-group">
                                   @Html.LabelFor(m => m.Phone, "Phone", htmlAttributes: new { @class = "text-black" })
                                   @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                              </div>
                         </div>
                    </div>

                    <!-- Order Summary -->
                    <div class="col-md-6">
                         <h2 class="h3 mb-3 text-black">Your Order</h2>
                         <div class="p-3 p-lg-5 border bg-white">
                              <table class="table site-block-order-table mb-5">
                                   <thead>
                                        <tr>
                                             <th>Product</th>
                                             <th>Total</th>
                                        </tr>
                                   </thead>
                                   <tbody>
                                        @foreach (var item in Model.CartItems)
                                        {
                                             <tr>
                                                  <td>@item.Name <strong class="mx-2">x</strong> @item.Quantity</td>
                                                  <td>(@item.Price * @item.Quantity).ToString("C")</td>
                                             </tr>
                                        }
                                        <tr>
                                             <td class="text-black font-weight-bold"><strong>Cart Subtotal</strong></td>
                                             <td class="text-black">@Model.TotalPrice.ToString("C")</td>
                                        </tr>
                                        <tr>
                                             <td class="text-black font-weight-bold"><strong>Order Total</strong></td>
                                             <td class="text-black font-weight-bold"><strong>@Model.TotalPrice.ToString("C")</strong></td>
                                        </tr>
                                   </tbody>
                              </table>

                              <div class="form-group">
                                   <button type="submit" class="btn btn-black btn-lg py-3 btn-block">
                                        Place Order
                                   </button>
                              </div>

                         </div>
                    </div>
               </div>
          }
     </div>
</div>

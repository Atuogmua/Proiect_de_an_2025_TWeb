@model Shop.Models.AdminDashboard
@{
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
     ViewBag.Title = "Dashboard Overview";
}

<div class="container py-5">
     <div class="mb-4">
          <h2>Reports</h2>
     </div>

     <div class="row g-4">
          <div class="col-md-3">
               <div class="card text-center shadow-sm">
                    <div class="card-body">
                         <div class="mb-3">
                              <i class="bi bi-bag-fill display-4 text-primary"></i>
                         </div>
                         <h5 class="card-title">Orders</h5>
                         <p class="card-text fs-4">@Model.TotalOrders</p>
                    </div>
               </div>
          </div>
          <div class="col-md-3">
               <div class="card text-center shadow-sm">
                    <div class="card-body">
                         <div class="mb-3">
                              <i class="bi bi-cart-fill display-4 text-primary"></i>
                         </div>
                         <h5 class="card-title">Products</h5>
                         <p class="card-text fs-4">@Model.TotalProducts</p>
                    </div>
               </div>
          </div>
          <div class="col-md-3">
               <div class="card text-center shadow-sm">
                    <div class="card-body">
                         <div class="mb-3">
                              <i class="bi bi-currency-dollar display-4 text-primary"></i>
                         </div>
                         <h5 class="card-title">Transactions</h5>
                         <p class="card-text fs-4">@Model.TotalTransactions</p>
                    </div>
               </div>
          </div>
          <div class="col-md-3">
               <div class="card text-center shadow-sm">
                    <div class="card-body">
                         <div class="mb-3">
                              <i class="bi bi-currency-dollar display-4 text-primary"></i>
                         </div>
                         <h5 class="card-title">Users</h5>
                         <p class="card-text fs-4">@Model.TotalUsers</p>
                    </div>
               </div>
          </div>
     </div>

     <div class="my-5">
          <h4>Revenue Summary</h4>
          <ul class="list-group list-group-flush">
               <li class="list-group-item d-flex justify-content-between">
                    <span>Revenue</span>
                    <strong>@Model.TotalRevenue.ToString("C")</strong>
               </li>
               <li class="list-group-item d-flex justify-content-between">
                    <span>NET</span>
                    <strong>@Model.NetRevenue.ToString("C")</strong>
               </li>
               <li class="list-group-item d-flex justify-content-between">
                    <span>Pending Orders</span>
                    <strong>@Model.PendingOrders.ToString("C")</strong>
               </li>
               <li class="list-group-item d-flex justify-content-between">
                    <span>Due</span>
                    <strong>@Model.DueAmount.ToString("C")</strong>
               </li>
               <li class="list-group-item d-flex justify-content-between">
                    <span>Overdue</span>
                    <strong>@Model.OverdueAmount.ToString("C")</strong>
               </li>
          </ul>
     </div>

     
</div>
